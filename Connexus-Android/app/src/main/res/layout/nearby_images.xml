<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.josh.connexus.viewContents.DynamicSlider
            android:id="@+id/near_by_images_slider_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/near_by_images_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>

        </com.josh.connexus.viewContents.DynamicSlider>

        <RelativeLayout
            android:id="@+id/near_by_images_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/arrow_transparent_gradient"
            android:layout_centerVertical="true"
            android:clickable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/swipeleft_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/near_by_images_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_transparent_gradient"
            android:clickable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/swiperight_blue" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>