<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.josh.connexus.SearchResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/primary_color_gradient"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/search_result_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onBackClick"
                android:layout_marginStart="15dp"
                android:background="@drawable/nav_button_background"/>

            <TextView
                android:id="@+id/search_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/search_result_back"
                android:layout_toStartOf="@+id/search_result_refresh_button"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:singleLine="true"
                android:ellipsize="end"/>



            <ImageView
                android:id="@+id/search_result_refresh_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refresh"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:onClick="onRefreshClick"
                android:background="@drawable/nav_button_background"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/search_result_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progressbar"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/search_result_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/error" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:text="Oops! Unable to get data!"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_result_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attention" />

                <TextView
                    android:id="@+id/search_result_warning_text"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/search_result_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
